extends ../layout
block content
	style
		include ../../public/stylesheet/account.css
	script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js")
	script(type="text/javascript")
		include ../../public/javascript/account.js
	#main
		#user
			#FirstName Имя: #{user.FirstName}
			#SecondName Фамилия: #{user.SecondName}
			#ThirdName Отчество: #{user.ThirdName}
		#departments
			Подразделения:
			- if (user.Departments)
				- each department in user.Departments
					.department(value= department.DocDepartment._id)
						.department_type= 'Тип:' + department.DocDepartment.Type
						.department_name= 'Наздвание:' + department.DocDepartment.Name
						.department_delete(value= department.DocDepartment._id)= 'Удалить'
					br
		#addDepartment Добавить