extends ../layout
block content
	br
	br
	br
	- if (Ads)
		- each Ad in Ads
			.ad
				.topic
					a(href="/Ads/" + Ad._id)= Ad.Name
				.text= Ad.Text
				.buttom
					.tag= 'Метка: ' + Ad.Tag
					.date= Ad.Date
					.user= 'Автор: ' + Ad.User.Name
	- if(Ads.length == 10)
		a(href='/Admin/ads/' + (num + 10))= 'Следующие 10'