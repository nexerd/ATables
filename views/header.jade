header
	style
		include ../public/stylesheet/header.css
	- if (user)
		#greeting= 'Добро пожаловать, ' + user.FirstName
	#menu
		.button#index
			a(href='/') На главную
		.button
			a(href='/Departments') Подразделение		
		.button
			a(href='/Ads/find/') Поиск по объявлениям
		- if (user)
			.button
				a(href='/Users/Departments') Мои подразделения
			.button
				a(href='/Users/Hot/') Горячее
	#help-menu
		- if (user)
			.button#profile
				a(href='/Users/account/') Личный кабинет
			.button#logout
				a(href='/Users/logout') Выход
		- else
			.button#signup
				a(href='/Users/signup') Регистрация
			.button#login
				a(href='/Users/login') Вход